<view class="{{['user',AppStyle]}}"><view class="header" style="{{'height:'+(CustomBar+'px')+';'}}"><view class="cu-bar bg-white" style="{{'height:'+(CustomBar+'px')+';'+('padding-top:'+(StatusBar+'px')+';')}}"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-back"></text></view><view class="content text-bold" style="{{'top:'+(StatusBar+'px')+';'}}">用户注册</view><view class="action"></view></view></view><view style="{{'padding:'+(NavBar+'px 10px 0px 10px')+';'}}"></view><view class="user-form"><form><view class="cu-form-group"><input name="input" placeholder="请输入用户名(必填)" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="cu-form-group"><input name="input" placeholder="请输入邮箱(必填)" data-event-opts="{{[['input',[['__set_model',['','mail','$event',[]]]]]]}}" value="{{mail}}" bindinput="__e"/></view><block wx:if="{{isEmail>0}}"><view class="cu-form-group"><input name="input" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/><block wx:if="{{show}}"><view data-event-opts="{{[['tap',[['RegSendCode',['$event']]]]]}}" class="sendcode text-blue" bindtap="__e">发送</view></block><block wx:if="{{!show}}"><view class="sendcode text-gray">{{times+"s"}}</view></block></view></block><view class="cu-form-group"><input name="input" type="password" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/></view><view class="cu-form-group"><input name="input" type="password" placeholder="再次输入密码" data-event-opts="{{[['input',[['__set_model',['','repassword','$event',[]]]]]]}}" value="{{repassword}}" bindinput="__e"/></view><block wx:if="{{isInvite==1}}"><view class="cu-form-group"><input name="input" type="text" placeholder="请输入邀请码(必填)" data-event-opts="{{[['input',[['__set_model',['','inviteCode','$event',[]]]]]]}}" value="{{inviteCode}}" bindinput="__e"/></view></block><view class="user-btn flex flex-direction"><button data-event-opts="{{[['tap',[['userRegister',['$event']]]]]}}" class="cu-btn bg-blue margin-tb-sm lg" bindtap="__e">立即注册</button><text data-event-opts="{{[['tap',[['toAgreement',['$event']]]]]}}" class="text-blue text-right margin-top" bindtap="__e">注册即为同意 《用户协议》</text></view></form></view></view>